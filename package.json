{
  "name": "openapi-to-document",
  "version": "1.0.0",
  "description": "OpenAPI v3 문서를 테이블 형식의 API 명세서(XLSX)로 변환하는 CLI 도구",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "otd": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "test": "bun test",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["openapi", "xlsx", "api", "documentation", "cli"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "exceljs": "^4.4.0",
    "openapi-sampler": "^1.6.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/bun": "latest",
    "@types/openapi-sampler": "^1.0.3",
    "openapi-types": "^12.1.3",
    "typescript": "^5.7.0"
  }
}
